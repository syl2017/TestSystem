<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/re_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <include
            android:id="@+id/title"
            layout="@layout/activity_title"></include>

    <RelativeLayout
        android:id="@+id/li_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/h_back"
            android:layout_width="match_parent"
            android:layout_height="180dp">


        </ImageView>

        <ImageView
            android:id="@+id/h_head"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_centerInParent="true" />

        <!---->
    </RelativeLayout>

    <com.example.testsystem.ItemPersonCenterActivity
        android:id="@+id/person_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/li_layout"
        app:left_icon="@drawable/username"
        app:left_text="用户名"
        app:right_text="syl"></com.example.testsystem.ItemPersonCenterActivity>

    <com.example.testsystem.ItemPersonCenterActivity
        android:id="@+id/person_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_name"
        app:left_icon="@drawable/email"
        app:left_text="邮箱"
        app:right_text="123@163.com"></com.example.testsystem.ItemPersonCenterActivity>

    <com.example.testsystem.ItemPersonCenterActivity
        android:id="@+id/person_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/person_email"
        app:left_icon="@drawable/password"
        app:left_text="密码"
        app:right_text="abc123"></com.example.testsystem.ItemPersonCenterActivity>


</RelativeLayout>